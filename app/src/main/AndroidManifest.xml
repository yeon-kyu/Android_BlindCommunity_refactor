<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yeonkyu.blindcommunity2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.yeonkyu.blindcommunity2.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_powerup"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_powerup_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/WhiteTheme">
        <activity android:name=".ui.login.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.signup.SignupActivity"/>
        <activity android:name=".ui.MainActivity"/>
        <activity android:name=".ui.board.BoardActivity"/>
        <activity android:name=".ui.post.PostActivity"/>
        <activity android:name=".ui.write.WriteActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>