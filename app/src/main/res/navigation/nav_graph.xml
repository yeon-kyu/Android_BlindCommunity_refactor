<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/home_screen">

    <fragment
        android:id="@+id/home_screen"
        android:name="com.yeonkyu.blindcommunity2.ui.home.HomeFragment"
        android:label="Home Screen"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_screen_to_account_screen"
            app:destination="@id/account_screen" />
    </fragment>

    <fragment
        android:id="@+id/account_screen"
        android:name="com.yeonkyu.blindcommunity2.ui.account.AccountFragment"
        android:label="Account Screen"
        tools:layout="@layout/fragment_account"/>

</navigation>