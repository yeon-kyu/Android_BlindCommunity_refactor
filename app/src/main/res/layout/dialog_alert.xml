<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/chat_dialog_badge_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="160dp"
    android:background="@drawable/bg_alert_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_alert_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/notosanskr_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_alert_title"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/dialog_alert_cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/dialog_alert_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_alert_confirm"
        android:gravity="center"
        android:text=""
        android:textColor="@color/red"
        android:fontFamily="@font/notosanskr_regular"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/dialog_alert_confirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/dialog_alert_title"
        app:layout_constraintStart_toEndOf="@+id/dialog_alert_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskr_regular"
        android:clickable="true"
        android:focusable="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>